{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "mocha": true
  },
  "extends": [
    "airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "global-require": "off",
    "import/no-dynamic-require": "off",
    "max-classes-per-file": "off",
    "no-param-reassign": "off",
    "no-unused-expressions": "off"
  }
}
